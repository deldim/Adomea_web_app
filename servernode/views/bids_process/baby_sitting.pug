            section
                form.simple_form.track_cleaner-step-two(action='/bids_process/selection', accept-charset='UTF-8', method='post')
                    .row
                        div(style='width: 100%')
                            .bid_process_wrapper
                                .bid_process_question.bid_process_duration
                                    .bid_process_question.bid_process_duration(style='height:400px')
                                        h2.bid_process_question_title Choisissez votre formule
                                        .bid_process_question_inputs
                                        |
                                        label(style='margin-left: 15%')
                                            input#choice1(type='radio', name='cleaning', value='small')
                                            |
                                            img.cleanning(src='../images/garde_simple.png')
                                        |
                                        label(style='margin-left: 15%')
                                            input#choice2(type='radio', name='cleaning', value='small')
                                            |
                                            img.baby_sitting(src='../images/garde_plus.png')
                                fieldset.bid-process-form
                                    h2.bid-process-form__heading.bid-process-form__heading--border  Informations compl&eacute;mentaires
                                    .row.bp-confirm-row
                                        .large-6.medium-6.small-6.columns
                                            .form-group.string.required.bid_user_firstname
                                                label.string.required.control-label Nombre d&rsquo;enfants&nbsp;
                                                .controls
                                                    select#bid_number_jean.number_jean(name='number_jean')
                                                        option(value='1') 1
                                                        option(value='2') 2
                                                        option(value='3') 3
                                                        option(value='4') 4
                                                        option(value='5') 5
                                                        option(value='6') 6
                                                        option(value='7') 7
                                                        option(value='8') 8
                                                        option(value='9') 9
                                                        option(value='10') 10
                                        .form-group.string.required.bid_user_mobile.hidden#subs
                                            label.string.required.control-label Lieu de la collecte
                                            .controls
                                                input.string.required.form-control(type='text', name='collect_adress')
                                    .row.bp-confirm-row
                                        .large-6.medium-6.small-6.columns
                                            .form-group.email.required.bid_user_email
                                                label.required.control-label Age(s)
                                                #p_scents
                                                    p
                                                        input#p_scnts.string.required.form-control(required='required', type='text', name='p_scnts')
                                                        |
                                                        a#addScnt Ajouter un champ
                                            .js-email-suggestion
                                        .large-6.medium-6.small-6.columns
                                .bid_process_submit
                                    input#button_search_cleaners.bid-process__button.bid-process__button--positive(type='submit', name='commit', value='Ã‰tape suivante', disable_with='Recherche, veuillez patienter ...')
            script(type='text/javascript').
                $(document).ready(function () {

                    var scntDiv = $('#p_scents');
                    var i = $('#p_scents p').size() + 1;
                    $('#addScnt').click(function () {
                        $('<p><input class="string required form-control" id="p_scnts"  type="text" name="p_scnt_' + i + '"><a id="remScnt">Effacer</a></p>').appendTo(scntDiv);
                        i++;
                        return false;
                    });
                    $('body').on('click', '#remScnt', function () {
                        $(this).closest('p').remove();
                    });
                    $('#remScntt').click(function () {
                        if (i > 2) {
                            $(this).parents('p').remove();
                            i--;
                        }
                        return false;
                    });
                    $('#choice2').change(function () {
                        $('#subs').removeClass('hidden');
                        return false;
                    });
                    $('#choice1').change(function () {
                        $('#subs').addClass('hidden');
                        return false;
                    });
                });
